{
	"version": 2,
	"builds": [
		{
			"src": "/server/index.js",
			"use": "@vercel/node"
		},
        {
            "src": "/client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
	],
	"rewrites": [
		{ "src": "/api/(.*)", "dest": "/server/index.js" },
		{ "source": "/assets/(.*)", "destination": "/client/assets/$1" },
		{ "src": "/(.*)", "dest": "/client/index.html" }
	]
}
